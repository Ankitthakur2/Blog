<!DOCTYPE html>
<html lang="en">
<head>
 
  <%- include('partials/head') %>

  <title>Blog</title>

</head>
<body >
  <%- include('partials/nav') %>


  <div class="container mt-3">
  <h1> <%= blog.title %> </h1>
  <img src="<%= blog.coverImageURL %> "   height="400px" />

  <pre class="mt-3"> <%= blog.body %></pre>
</div>

<div class="container mt-3">
 <img src="/images/default.jpg"  height="50px"/>
 
 <b> <%= blog.createdBy.fullName %> </b> 
  </div>

  <div class="container mt-3">
    
    <h1>Comments(<%= comments.length %>)</h1>

         <% if(locals.user) { %>

             
                <form class="mx-1 mx-md-4" action="/blog/comment/<%= blog._id %>" method="post" >
           
                  <textarea name="content" class="form-control" > </textarea>
                      <button type="submit" class="btn btn-primary mt-3">Add</button>
                  

                </form>

            
        
      <%  } %>

    </div>



    <div class="container mt-3">
      <% comments.forEach(Comment => { %>
        <div>
          <img src="/images/default.jpg"  height="50px"/>
          <b> <%= Comment.createdBy.fullName %> </b>
          <pre class="mt-3"><%= Comment.content %></pre>
        </div>
      <% }) %>
    </div>


    <%- include('partials/footer') %>

   <%- include('partials/scripts') %>


</body>
</html>